# Python Path (required for imports)
PYTHONPATH=src

# Database Configuration
DATABASE_URL=postgresql+asyncpg://aurora:aurora_dev@localhost:5434/aurora
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6381/0

# Application Configuration
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# Security Configuration (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8001"]
CORS_ALLOW_CREDENTIALS=true

# Security Configuration - Request Limits
MAX_REQUEST_SIZE=10485760  # 10MB in bytes

# Security Configuration - Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # Requests per window
RATE_LIMIT_WINDOW_SECONDS=60  # Time window in seconds

# Security Configuration - API Keys (for service-to-service)
API_KEYS_ENABLED=false
VALID_API_KEYS=[]  # Add API keys as JSON array if enabled
